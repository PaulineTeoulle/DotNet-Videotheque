@model ProjetVideotheque.Models.Film

@{
    ViewData["Title"] = "Supprimer";
}

<div class="details">

    <h3>Voulez-vous vraiment supprimer ce film ?</h3>

    <table class="table">
        <thead>
            <tr>
                <th> @Html.DisplayNameFor(model => model.NomFilm)</th>
                <th> @Html.DisplayNameFor(model => model.CategorieFilm)</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>   @Html.DisplayFor(model => model.NomFilm)</td>
                <td>
                    @Html.DisplayFor(model => model.CategorieFilm)
                </td>
            </tr>
        </tbody>

    </table>

    <div class="groupButton">
        <div id="saveAction">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Supprimer" class="btn btn-danger" id="saveActionInput"/> 
            </form>
        </div>
        <div id="cancelAction">
            <a asp-action="Index"><input type="button" id="cancelActionInput" value="Annuler" /></a>
        </div>
    </div>


</div>

