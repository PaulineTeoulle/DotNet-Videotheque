@model ProjetVideotheque.Models.Client

@{
    ViewData["Title"] = "Supprimer un client";
}

<div class="details">

    <h3>Voulez-vous vraiment supprimer ce client ?</h3>

    <table class="table">
        <thead>
            <tr>
                <th>   @Html.DisplayNameFor(model => model.NomClient)</th>
                <th> @Html.DisplayNameFor(model => model.PrenomClient)</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.NomClient)</td>
                <td>@Html.DisplayFor(model => model.PrenomClient)</td>
            </tr>

        </tbody>

    </table>

    <div class="groupButton">
        <div id="saveAction">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Supprimer" class="btn btn-danger" id="saveActionInput" />
            </form>
        </div>
        <div id="cancelAction">
            <a asp-action="Index"><input type="button" id="cancelActionInput" value="Annuler" /></a>
        </div>
    </div>


</div>
