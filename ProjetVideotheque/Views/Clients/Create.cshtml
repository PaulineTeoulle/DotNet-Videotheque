@model ProjetVideotheque.Models.Client

@{
    ViewData["Title"] = "Create";
}

<div class="addClient">
    <form asp-action="Create">
        <div class="form-group" id="lastName">
            <label asp-for="NomClient" class="control-label"></label>
            <input asp-for="NomClient" class="form-control" />
            <span asp-validation-for="NomClient" class="text-danger"></span>
        </div>
        <div class="form-group" id="firstName">
            <label asp-for="PrenomClient" class="control-label"></label>
            <input asp-for="PrenomClient" class="form-control" />
            <span asp-validation-for="PrenomClient" class="text-danger"></span>
        </div>
        <div class="form-group " id="address">
            <label asp-for="AdresseClient" class="control-label"></label>
            <input asp-for="AdresseClient" class="form-control" />
            <span asp-validation-for="AdresseClient" class="text-danger"></span>
        </div>
        <div class="form-group " id="mail">
            <label asp-for="MailClient" class="control-label"></label>
            <input asp-for="MailClient" class="form-control" />
            <span asp-validation-for="MailClient" class="text-danger"></span>
        </div>
        <div class="groupButton">
            <div class="form-group " id="saveAction">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" id="saveActionInput" />
            </div>
            <div id="cancelAction">
                <a asp-action="Index"><input type="button" id="cancelActionInput" value="Annuler" /></a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
