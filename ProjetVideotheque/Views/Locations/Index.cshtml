@model IEnumerable<ProjetVideotheque.Models.Location>

@{
    ViewData["Title"] = "Index";
}


<div class="row" id="topBar">
        <form asp-controller="Locations" asp-action="Index" method="get" >
            <p>
                <input type="text" name="SearchString" placeholder="Rechercher un emprunt" />
                <input type="submit" value="Filter" />
            </p>
        </form>
    <p class="offset-md-8">
        <button class="btn btn-primary " onclick="location.href='@Url.Action("Create", "Locations")'">+ Ajouter un emprunt</button>
    </p>
</div>

<form asp-controller="Locations" asp-action="Index" method="get" id="search">
    <p>
        <input type="submit" value="Voir tous les emprunts" />
    </p>
</form>

<h1> Locations en cours</h1>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LocationClientId)
                </th>
                <th>
                    Email du client
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LocationFilmId)
                </th>
                <th>
                    Réalisateur du film
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateDebutLocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateRetourLocation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr>

                @if (!(bool)item.RenduFilm)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationClientId.NomClient)
                        @Html.DisplayFor(modelItem => item.LocationClientId.PrenomClient)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationClientId.MailClient)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationFilmId.NomFilm)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationFilmId.RealisateurFilm)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateDebutLocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateRetourLocation)
                    </td>
                    <td>

                        <a asp-action="Edit" asp-route-id="@item.Id"><img class="smallIcon" src="@Url.Content("~/edit.png")" alt="editLocation" /></a>
                        <a asp-action="ReturnFilm" asp-route-id="@item.Id">Rendre le film</a>
                    </td>
                }

            </tr>
            }
        </tbody>
    </table>

    <hr/>
    <h1> Locations archivées</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LocationClientId)
                </th>
                <th>
                    Email du client
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LocationFilmId)
                </th>
                <th>
                    Réalisateur du film
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateDebutLocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateRetourLocation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr>

                @if ((bool)item.RenduFilm)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationClientId.NomClient)
                        @Html.DisplayFor(modelItem => item.LocationClientId.PrenomClient)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationClientId.MailClient)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationFilmId.NomFilm)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationFilmId.RealisateurFilm)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateDebutLocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateRetourLocation)
                    </td>
                    <td>
                        Rendu
                    </td>

                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id"><img class="smallIcon" src="@Url.Content("~/delete.png")" alt="deleteLocation" /></a>
                    </td>
                }
            </tr>
            }
        </tbody>
    </table>
</div>