@model ProjetVideotheque.Models.Location

@{
    ViewData["Title"] = "Supprimer un emprunt";
}




<div class="details">

    <h3>Voulez-vous vraiment supprimer cette location des archives ?</h3>

    <table class="table">
        <thead>
            <tr>
                <th> @Html.DisplayNameFor(model => model.LocationFilmId)</th>
                <th> Nom du client</th>
                <th> Prénom du client</th>
                <th> @Html.DisplayNameFor(model => model.DateRetourLocation)</th>
                <th> @Html.DisplayNameFor(model => model.RenduFilm)</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.LocationFilmId.NomFilm)</td>
                <td>@Html.DisplayFor(model => model.LocationClientId.NomClient)</td>
                <td>@Html.DisplayFor(model => model.LocationClientId.PrenomClient)</td>
                <td>@Html.DisplayFor(model => model.DateRetourLocation)</td>
                <td>@Html.DisplayFor(model => model.RenduFilm)</td>
            </tr>
        </tbody>

    </table>

    <div class="groupButton">
        <div id="saveAction">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Supprimer" class="btn btn-danger" id="saveActionInput" />
            </form>
        </div>
        <div id="cancelAction">
            <a asp-action="Index"><input type="button" id="cancelActionInput" value="Annuler" /></a>
        </div>
    </div>


</div>