@model MvcMovie.Models.Film

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Film</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomFilm" class="control-label"></label>
                <input asp-for="NomFilm" class="form-control" />
                <span asp-validation-for="NomFilm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateSortieFilm" class="control-label"> Année</label>
                <input asp-for="DateSortieFilm" class="form-control" />
                <span asp-validation-for="DateSortieFilm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RealisateurFilm" class="control-label"></label>
                <input asp-for="RealisateurFilm" class="form-control" />
                <span asp-validation-for="RealisateurFilm" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategorieFilm" class="control-label"></label>
                <input asp-for="CategorieFilm" class="form-control" />
                <span asp-validation-for="CategorieFilm" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />

                <a asp-action="Index" class="btn btn-light">Annuler</a>
            </div>

        </form>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
